<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_tfg"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="SLIDER MOTORIZADO \n Eduardo Maldonado"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_conectar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:text="CONECTAR"
                app:iconTint="#1E670F0F" />

            <Button
                android:id="@+id/btn_desconectar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:text="DESCONECTAR" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_enviar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:text="START" />

            <Button
                android:id="@+id/btn_detener"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:text="STOP" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_dispositivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="No conectado"
        android:textAlignment="center" />


    <Switch
        android:id="@+id/switch_intervalometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"
        android:text="intervalometro" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHoras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Horas"
                android:textSize="@dimen/dimenText" />

            <SeekBar
                android:id="@+id/seekBarHoras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:max="24"
                android:min="0"
                android:progress="0"

                />

            <TextView
                android:id="@+id/txtMinutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Minutos"
                android:textSize="@dimen/dimenText" />

            <SeekBar
                android:id="@+id/seekBarMinutos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:max="59"
                android:min="0"
                android:progress="0"></SeekBar>

            <TextView
                android:id="@+id/txtSegundos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Segundos"
                android:textSize="@dimen/dimenText"></TextView>

            <SeekBar
                android:id="@+id/seekBarSegundos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:max="59"
                android:min="0"
                android:progress="0"></SeekBar>

            <TextView
                android:id="@+id/txtIntervalo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Intervalo"
                android:textSize="@dimen/dimenText"

                ></TextView>

            <SeekBar
                android:id="@+id/seekBarIntervalo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:max="20"
                android:min="0"
                android:progress="0"></SeekBar>

            <TextView
                android:id="@+id/txtFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Fotos"
                android:textSize="@dimen/dimenText"></TextView>

            <SeekBar
                android:id="@+id/seekBarFotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:max="50"
                android:min="0"
                android:progress="0"></SeekBar>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>